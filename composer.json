{
    "name": "c01l/phpdecorator",
    "version": "1.2.0",
    "description": "The phpdecorator library can be used to wrap functions of objects and classes with additional functionality. This is a feature that can be compared to Python decorators. ",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "C01l\\PhpDecorator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "C01l\\PhpDecorator\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.0",
        "psr/container": "^2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "scripts": {
        "phpunit": "phpunit",
        "lint": "phpcs --standard=PSR12 src/ tests/",
        "fix-linting": "phpcbf --standard=PSR12 src/ tests/"
    }
}
